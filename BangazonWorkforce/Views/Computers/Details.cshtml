@model BangazonWorkforce.Models.ViewModel.ComputerViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Purchase Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>
        <dt class = "col-sm-2">
            Decomission Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DecomissionDate)
        </dd>
        <dt class = "col-sm-2">
            Make
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class = "col-sm-2">
            Model
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
    </dl>
</div>
<div>
    @if (Model.EmployeeId == null)
    {
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) <span>|</span>
    }
    @if (Model.EmployeeId != null)
    {
    <p>❌ Cannot be deleted (assigned to @Html.DisplayFor(model => model.Employee.FirstName) @Html.DisplayFor(model => model.Employee.LastName))</p>
    }
    <a asp-action="Index">Back to List</a>
</div>
