@model BangazonWorkforce.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Computer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.Make) @Html.DisplayFor(model => model.Computer.Model)
        </dd>
        <dt class="col-sm-2">
            Training Programs
        </dt>

        <ol>
            @foreach (var trainingProgram in Model.TrainingPrograms)
            {
                <li>@trainingProgram.Name</li>
            }
        </ol>
    </dl>
</div>
<div>@Html.ActionLink("Assign To Training Program", "AssignTraining", new { Model.Id }, new { @class = "btn btn-info btn-sm mb-1" })</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { Model.Id }, new { @class = "btn btn-primary btn-sm"})
    <a asp-action="Index" class="btn btn-secondary btn-sm text-dark">Back to List</a>
</div>
