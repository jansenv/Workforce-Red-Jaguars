@model IEnumerable<BangazonWorkforce.Models.TrainingProgram>

@{
    ViewData["Title"] = "Index";
}

<h1>Upcoming Training Programs</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 text-left"><a asp-action="Create" class="btn btn-secondary text-dark btn-sm mb-3">Create New</a></div>
        <div class="col-md-6 text-right"><a asp-action="PastIndex" class="btn btn-primary btn-sm mb-3">View Past Programs</a></div>
    </div>
</div>
    <table class="table">
        <thead>
            <tr class="table-primary">
                <th>
                    Program Name
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Max Attendees
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-secondary">
                    <td>
                        @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxAttendees)
                    </td>
                </tr>
            }
        </tbody>
    </table>
