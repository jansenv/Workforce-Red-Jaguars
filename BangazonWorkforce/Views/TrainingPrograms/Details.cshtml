@model BangazonWorkforce.Models.ViewModel.TrainingProgramViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Program Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            Maximum Attendees
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxAttendees)
        </dd>
        @if (Model.EndDate < DateTime.Now)
        {
            <dt class="col-sm-2">
                Employees Attended
            </dt>
        }
        else
        {
            <dt class="col-sm-2">
                Employees Currently Attending
            </dt>
        }
        <ol>
            @foreach (var employee in Model.Employees)
            {
                <li>@employee.FirstName @employee.LastName</li>
            }
        </ol>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-sm" }) 
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-outline-danger btn-sm" }) 
    @if (Model.EndDate < DateTime.Now)
    {
        <a asp-action="PastIndex" class="btn btn-secondary text-dark btn-sm">Back to List</a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-secondary text-dark btn-sm">Back to List</a>
    }
    
</div>
